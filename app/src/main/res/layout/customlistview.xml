<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/layout_bacground"
    android:weightSum="2"
    android:paddingRight="10dp"
    android:paddingBottom="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:paddingTop="5dp"
        android:src="@drawable/profilepic"
        app:civ_border_color="#4CAF50"
        app:civ_border_width="3dp"
        android:paddingBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/profileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textSize="20sp"
            android:paddingLeft="15dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/educationQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Education Qualification"
            android:textSize="18sp"
            android:paddingLeft="15dp"
            android:textColor="#757575"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginBottom="5dp">
           <TextView
               android:id="@+id/InterestedSubject"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Interested Subject:"
               android:textSize="15sp"
               android:paddingLeft="15dp"
               android:textColor="#000"/>
           <TextView
               android:id="@+id/InterestedSubjectName"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Mathe"
               android:textSize="15sp"
               android:paddingLeft="15dp"
               android:textColor="#757575"/>

       </LinearLayout>
    </LinearLayout>
</LinearLayout>